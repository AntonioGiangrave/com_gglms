/*TUTTA LA PARTE DEL QUIZ*/



.lightbox {
  background-color: #3c6ca3;
  color: #FFFFFF;
  display: none;
  height: auto;
  left: 0;
  opacity: 0.89;
  padding: 15px 90px;
  position: relative;
  top: 0;
  width: 80%;
  z-index: 9999;
}
.ongo {
  display: block;
  left: auto !important;
  top: auto !important;
}
.lightbox a {
  border-bottom: 1px dashed #FFFFFF;
  color: #FFFFFF;
  display: inline-block;
  margin-bottom: 20px;
  text-decoration: none;
}

.lightbox label {
  display: block;
  margin-top: 5px;
}
.lightbox .resume {
  margin-top: 10px;
}


/*FINE PARTE QUIZ*/
.btn {

  width: auto;
  left: 150px;
  max-width: 200px;
}

.btn-success {
  background-color: #5BB75B;
  background-image: linear-gradient(to bottom, #62C462, #51A351);
  background-repeat: repeat-x;
  border-color: rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.25);
  color: #FFFFFF;
  text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.25);
}

.btn-danger {
  background-color: #DA4F49;
  background-image: linear-gradient(to bottom, #EE5F5B, #BD362F);
  background-repeat: repeat-x;
  border-color: rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.25);
  color: #FFFFFF;
  text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.25);
}


